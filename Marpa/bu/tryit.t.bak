sub verbatim {
    my ( $parser, $paragraph, $line_num ) = @_;
    print "VERBATIM at $line_num:\n$paragraph";
    return;
}

sub textblock {
    my ( $parser, $paragraph, $line_num ) = @_;
    print "TEXTBLOCK at $line_num:\n$paragraph";
    return;
}

